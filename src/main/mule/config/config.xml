			<email:properties >
				<email:property key="mail.smtp.ssl.enable" value="true" />
			</email:properties>
		</email:smtp-connection>
	</email:smtp-config> -->
	<configuration-properties doc:name="Configuration properties" doc:id="5c7d0e88-f8ce-41ce-a11e-9b1da84766e5" file="properties/config-${mule.env}.yaml" />
	<email:smtp-config name="Email_SMTP_Outlook" doc:name="Email SMTP" doc:id="e01bfe86-74d3-4d64-bb4f-fbe40d96e602" >
		<email:smtp-connection host="${smtp.host}" port="${smtp.port}" user="${smtp.username}" password="${secure::smtp.password}" >
			<email:properties >
				<email:property key="mail.smtp.ssl.enable" value="false" />
				<email:property key="mail.transport.protocol" value="smtp" />
				<email:property key="mail.smtp.starttls.enable" value="true" />
			</email:properties>
		</email:smtp-connection>
	</email:smtp-config>
	<global-property doc:name="Global Property" doc:id="c76e3fc6-1609-412c-9071-33cf9ff19445" name="mule.env" value="LOCAL" />
	<secure-properties:config name="Secure_Properties_Config" doc:name="Secure Properties Config" doc:id="3f84bff6-aebe-4217-a807-d2a4e69eb087" file="properties/config-${mule.env}.yaml" key="${vault.key}" >
		<secure-properties:encrypt algorithm="Blowfish" />
	</secure-properties:config>
</mule>
